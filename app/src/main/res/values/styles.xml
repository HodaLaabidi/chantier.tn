<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ChantierTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
        <item name="android:statusBarColor">@color/colorBlack</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorYellow</item>
    </style>
    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorYellow</item>
    </style>

    <style name="ChantierTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="CheckBoxGray" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorYellow</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="colorControlNormal">@color/gray_3</item>
        <item name="colorControlActivated">@color/colorYellow</item>
        <item name="colorControlHighlight">@color/colorYellow</item>
        <item name="android:colorActivatedHighlight">@color/colorYellow</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>

    <style name="ChantierTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="menu_item_nav_drawer">
        <item name="android:textColor">@color/gray_3</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppCompatAlertDialogStyleSuggest" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/colorDarkGrey</item>
        <item name="android:background">@color/transparent_background</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="IndicatorColor" ><item name="android:itemBackground">
        @color/colorYellow
    </item>
    </style>

</resources>
