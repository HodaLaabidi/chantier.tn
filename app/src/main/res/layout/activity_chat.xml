<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/chat_background"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.ChatActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbar_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ChantierTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorBlack"
            app:title=""
            app:popupTheme="@style/ChantierTheme.PopupOverlay" >
            <ImageView
                android:id="@+id/btn_arrow_back_chat"
                android:padding="10dp"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_white"/>
            <ImageView
                android:scaleType="centerInside"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:src="@drawable/logo_app"
                android:layout_gravity="left"
                android:id="@+id/toolbar_title" />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_above="@id/rl_chat"
        android:layout_below="@id/toolbar_chat"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rv_chat"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"/>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_chat"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:layout_height="wrap_content">
        <tn.chantier.chantiertn.utils.textstyle.RalewayEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorGrey"
            android:hint="@string/send_message"
            android:id="@+id/et_text_send"
            android:layout_toLeftOf="@id/btn_send"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"/>
        <ImageButton
            android:background="@color/colorWhite"
            android:src="@drawable/ic_action_send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btn_send"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</RelativeLayout>
</LinearLayout>
