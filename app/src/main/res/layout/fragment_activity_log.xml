<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ActivityLogFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <tn.chantier.chantiertn.utils.textstyle.RalewayTextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:textSize="18sp"
                app:fonttype="bold"
                android:layout_height="wrap_content"
                android:text="@string/followed_offers"
                android:textColor="@color/colorDarkGrey"/>
            <LinearLayout
                android:background="@color/colorYellow"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorGrey"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    </LinearLayout>
    <ProgressBar
        android:visibility="gone"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:indeterminateTint="@color/colorTranparentYellow"
        android:indeterminateTintMode="src_in"
        android:id="@+id/pb_followed_offers_fragment"
        android:layout_height="wrap_content"
        />

    <ScrollView
        android:background="@color/lightGray"
        android:id="@+id/sv_followed_offers"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/lightGray"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:scrollbars="vertical"
                android:id="@+id/rv_followed_offers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>