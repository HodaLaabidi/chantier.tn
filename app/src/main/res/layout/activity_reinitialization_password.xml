<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/colorDarkGrey"
    android:orientation="vertical"
    tools:context=".activities.ReinitializationPasswordActivity">
    <LinearLayout
        android:id="@+id/ic_arrow_back_connexion"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:src="@drawable/ic_arrow_back_white"
            android:layout_width="45dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="40dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/cadenas"/>
            <tn.chantier.chantiertn.utils.textstyle.RalewayTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorWhite"
                app:fonttype="bold"
                android:textSize="24sp"
                android:text="Mot de passe oubliÃ© ?"/>

            <tn.chantier.chantiertn.utils.textstyle.RalewayTextView
                android:layout_width="280dp"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content"
                android:textColor="@color/lightGray"
                android:text="@string/text_forgotten_password"/>
            <tn.chantier.chantiertn.utils.textstyle.RalewayEditText
                android:textCursorDrawable="@drawable/color_cursor"
                android:id="@+id/et_email_connexion_reset"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:layout_width="300dp"
                android:inputType="text"
                android:backgroundTint="@color/colorYellow"
                android:hint="Adresse e-mail"
                android:textSize="16sp"
                android:padding="10dp"
                android:textAlignment="textStart"
                android:textColorHint="@color/colorWhite"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_alignParentStart="true"
                android:orientation="vertical"
                android:background="@drawable/background_yellow_button"
                android:gravity="center_vertical"
                android:id="@+id/validate_button_reset"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="161dp"
                android:layout_height="41dp">
                <tn.chantier.chantiertn.utils.textstyle.RalewayTextView
                    android:layout_gravity="center_horizontal"
                    app:fonttype="semiBold"
                    android:text="@string/validate_button"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <tn.chantier.chantiertn.utils.textstyle.RalewayTextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textSize="18sp"
                    android:textColor="@color/lightGray"
                    android:text="Vous n'avez pas un compte ?"
                    android:layout_height="wrap_content" />
                <LinearLayout

                    android:id="@+id/create_account_from_forgottenPW_layout"
                    android:layout_marginTop="30dp"
                    android:layout_width="161dp"
                    android:layout_height="40dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/background_white_button">
                    <tn.chantier.chantiertn.utils.textstyle.RalewayTextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:fonttype="semiBold"
                        android:layout_height="wrap_content"
                        android:text="@string/inscription"
                        android:textColor="@color/colorDarkGrey"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>