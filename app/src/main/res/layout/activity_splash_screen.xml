<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/screen_pic"
    android:gravity="center_horizontal"
    tools:context=".activities.SplashScreen"
    >

    <LinearLayout
        android:layout_marginTop="-110dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
    <ImageView
        android:visibility="gone"
        android:id="@+id/logo_c_splash_screen"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo_c"/>

        <ImageView
            android:id="@+id/logo_splash_screen"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_jn" />
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/text_splash_screen"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <tn.chantier.chantiertn.utils.textstyle.RalewayTextView
                android:textAllCaps="true"
                android:gravity="center_horizontal"
                app:fonttype="bold"
                android:layout_marginTop="0dp"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vous met en relation avec"/>
            <tn.chantier.chantiertn.utils.textstyle.RalewayTextView
                android:textAllCaps="true"
                android:gravity="center_horizontal"
                android:id="@+id/text_splash_screen_2"
                app:fonttype="bold"
                android:textColor="@color/colorYellow"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vos futurs clients"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>