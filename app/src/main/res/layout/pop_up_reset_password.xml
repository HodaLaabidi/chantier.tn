<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="450dp"
    android:layout_gravity="center"
    android:background="@color/colorDarkGrey">
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:src="@drawable/check_circle"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <tn.chantier.chantiertn.utils.textstyle.RalewayTextView
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp"
            app:fonttype="bold"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:text="Félicitations"
            android:layout_height="wrap_content" />
        <tn.chantier.chantiertn.utils.textstyle.RalewayTextView
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:id="@+id/text_congratulations"
            app:fonttype="semiBold"
            android:layout_width="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textColor="@color/colorWhite"
            android:text="Votre compte a bien été validé"
            android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="350dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/btn_go_to_connexion"
            android:gravity="center"
            android:background="@drawable/background_yellow_button"
            android:layout_margin="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <tn.chantier.chantiertn.utils.textstyle.RalewayTextView
                android:textColor="@color/colorBlack"
                android:padding="8dp"
                android:textSize="18dp"
                app:fonttype="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accéder à mon compte"/>


        </LinearLayout>

    </LinearLayout>
    </LinearLayout>


</LinearLayout>